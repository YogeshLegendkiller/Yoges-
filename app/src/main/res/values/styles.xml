<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="editTextColor">#e3e3e3</item>

    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="MyEditTextTheme">
        <!-- Used for the bottom lines when not selected / focused -->
        <item name="colorControlNormal">#fff</item>
        <item name="colorControlActivated">#fff</item>
        <item name="colorControlHighlight">#fff</item>
        <!-- colorControlActivated & colorControlHighlight use the colorAccent color by default -->
    </style>

    <style name="MySeekBarTheme" parent="Widget.AppCompat.SeekBar">
        <item name="colorAccent">#EFF0F1</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">#757575</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="colorControlActivated">#757575</item>

        <item name="colorControlHighlight">#757575</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="card_top">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="card">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="card_inner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">#fff</item>
    </style>

    <style name="NavigationTheme">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="cardheader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff7e00</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="list_item_caption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">#666</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="list_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">#666</item>
    </style>

    <style name="list_item_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#e3e3e3</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="list_header_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/SForange</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>

    <style name="edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">#fff</item>
        <item name="android:textColor">#666</item>
        =
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="login_editext">
        <item name="colorControlNormal">#fff</item>
        <item name="colorControlActivated">#ffffff</item>
        <item name="colorControlHighlight">#ffffff</item>
    </style>

    <style name="list_splitter">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#e3e3e3</item>
    </style>

    <style name="TreeNodeStyleCustom"> <item name="android:paddingLeft">20dp</item></style>


</resources>
