<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    app:behavior_hideable="true"
    app:behavior_peekHeight="200dp"
    app:layout_behavior="@string/bottom_sheet_behavior">
<RelativeLayout
    android:layout_width="wrap_content"
    android:id="@+id/rl1"
    android:background="#fff"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#757575"
        android:textSize="15sp"
        android:textStyle="bold"
        android:id="@+id/destinationaddrs"
        android:layout_margin="10dp"/>
     <View
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:layout_below="@+id/destinationaddrs"
         android:background="#e3e3e3"/>
</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fafafa"
        android:layout_below="@+id/rl1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#757575"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:id="@+id/duration"
            android:layout_alignParentLeft="true"
            android:layout_margin="20dp"
            android:gravity="center_vertical"
            android:layout_alignParentStart="true"
           />
        <Button
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:paddingLeft="5dp"
            android:textColor="#fff"
            android:id="@+id/start_travel"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/ic_navigation_black_24dp"
            android:includeFontPadding="false"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_margin="20dp"
            android:background="@drawable/buttonshape"
            android:text="Start"/>
        <Button
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:textColor="#fff"
            android:id="@+id/stop_travel"
            android:paddingLeft="5dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/ic_navigation_black_24dp"
            android:includeFontPadding="false"
            android:layout_margin="20dp"
            android:gravity="center"
            android:background="@drawable/buttonshape"
            android:text="Stop"/>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progresstravel"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>
