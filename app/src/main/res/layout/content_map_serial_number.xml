<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_map_serial_number"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
       app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="precisioninfomatics.servicefirst.Activities.MapSerialNumber"
    tools:showIn="@layout/activity_map_serial_number">
    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:paddingBottom="10dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/card"
            style="@style/card"
            app:cardElevation="4dp"
            app:cardCornerRadius="2dp">

            <RelativeLayout
                android:id="@+id/root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#fff">

                <TextView
                    android:id="@+id/visittext"
                    android:text="@string/title_activity_map_serial_number"
                    style="@style/cardheader"
                    />


                <View
                    android:id="@+id/view1"
                    android:layout_below="@+id/visittext"
                    style="@style/list_header_view" />

                <TextView
                    android:id="@+id/checkin_text"
                    android:layout_below="@+id/view1"
                    style="@style/list_item_caption"
                    android:text="@string/serialnunmber" />


                <EditText
                    android:id="@+id/serialnumber"
                    android:layout_below="@+id/checkin_text"
                    android:cursorVisible="true"
                    android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
                    android:focusable="false"
                    style="@style/edit_text_style" />

                <View
                    android:id="@+id/checkinview"
                    android:layout_below="@+id/serialnumber"
                    style="@style/list_item_view"/>


                <TextView
                    android:id="@+id/checkout_text"
                    android:layout_below="@+id/checkinview"
                    style="@style/list_item_caption"
                    android:text="@string/shiptoserialnumber" />

                <EditText
                    android:id="@+id/shiptoserialno"
                    android:layout_below="@+id/checkout_text"
                    android:inputType="textMultiLine"
                    style="@style/edit_text_style"
                    />


</RelativeLayout>

        </android.support.v7.widget.CardView>
        </RelativeLayout>
</RelativeLayout>
